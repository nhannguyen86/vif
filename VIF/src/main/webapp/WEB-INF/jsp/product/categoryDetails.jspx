<div xmlns:spring="http://www.springframework.org/tags"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xmlns:util="urn:jsptagdir:/WEB-INF/tags/util"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	class="TableWrapper"
	xmlns:sec="http://www.springframework.org/security/tags" 
	xmlns:form="http://www.springframework.org/tags/form">
	<jsp:directive.page contentType="text/html;charset=UTF-8" />
	<jsp:output omit-xml-declaration="yes" />
	<spring:url var="scriptsFolder" value="/scripts" />
	<spring:url var="catListURL" value="/category/list/" />
	<spring:url var="imagesFolder" value="/images" />
	
	<div id="inner-content">
		<span class="bor-left"><img src="${imagesFolder}/dummy.gif"
			alt="" /></span>
		<div class="content-title">
			<h2>
				<c:choose>
					<c:when test="${isView}">
						<span>THÔNG TIN loại hàng hóa</span>
						<spring:url value="/category/update" var="catFormLink" scope="request">
							<spring:param name="edit"></spring:param>						
						</spring:url>
					</c:when>
					<c:otherwise>
						<span>THÊM loại hàng hóa mới</span>
						<spring:url value="/category/update" var="catFormLink" scope="request">
							<spring:param name="create"></spring:param>						
						</spring:url>
					</c:otherwise>
				</c:choose>		
			</h2>
		</div>
		<div id="content">
			<form:form action="${requestScope.catFormLink}" method="POST"
				commandName="cat">
				<form:hidden path="id" />
		
				<div class="formContent">
					<table width="100%" cellpadding="0" cellspacing="5"
						class="TableThongTinTram">
						<col width="20%" />
						<col width="80%" />
		
						<tr>
							<td></td>
							<td><c:if test="${not empty success}">
									<c:choose>
										<c:when test="${success}">
											<div class="infoMessage" id="messageArea">
												<p>Thông tin được cập nhật thành công.</p>
											</div>
										</c:when>
										<c:otherwise>
											<div class="errorMessage" id="messageArea">
												<p>Xảy ra lỗi khi lưu dữ liệu</p>
											</div>
										</c:otherwise>
									</c:choose>
								</c:if></td>
						</tr>
						<tr>
						<c:choose>
								<c:when test="${companies==null}">
									<td colspan="2">
										<form:hidden path="companyID"/>
									</td>
								</c:when>
								<c:otherwise>
										<td align="right">Công ty:
										</td>
										<td>
											<form:select style="width:170px" path="companyID">
												<form:options items="${companies}" itemValue="id"
													itemLabel="ten" />
											</form:select>
										</td>
								</c:otherwise>
							</c:choose>
							</tr>
							<tr>
								<td align="right">Mã viết tắt (<label class="errorMessage">*</label>):
								</td>
								<td><form:input path="catCode" cssClass="textInput mediumWidth"/>&#160;&#160;&#160;<form:errors path="catCode"
										cssClass="errorMessage" /></td>
							</tr>
							<tr>
								<td align="right">Tên (<label class="errorMessage">*</label>):
								</td>
								<td><form:input path="catName" cssClass="textInput mediumWidth"/>&#160;&#160;&#160;<form:errors
										path="catName" cssClass="errorMessage" /></td>
							</tr>
							<tr>
								<td align="right">Trạng thái (<label class="errorMessage">*</label>):
								</td>
								<td><form:select path="catStatus" style="width:170px">
										<form:option value="0">--- Trạng thái ---</form:option>
										<form:options items="${statusList}" itemValue="id"
											itemLabel="name" />
									</form:select>&#160;&#160;&#160;<form:errors path="catStatus" cssClass="errorMessage" />
								</td>
							</tr>
						<tr>
							<td>&#160;</td>
						</tr>
						<tr>
							<td><label> <!-- Empty -->
							</label></td>
							<td>
								<sec:authorize ifAnyGranted="ROLE_SMD_ADMIN,ROLE_COMPANY_ADMIN">
								<a href="javascript:;"
								onclick="javascript:document.forms[0].submit();" class="btn-1"
								title="Lưu thông tin"><span><span>Lưu</span></span></a>
								<a href="javascript:;"
								onclick="javascript:document.forms[0].reset();" class="btn-1"
								title="Làm lại"><span><span>Reset</span></span></a>
								</sec:authorize>
								<a href="${catListURL}" class="btn-1"
											title="Danh sách Hàng hóa"><span><span>Danh sách Hàng hóa</span></span></a>
							</td>
						</tr>
					</table>
				</div>
			</form:form>
		</div>
	</div>
</div>